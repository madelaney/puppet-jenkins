[Unit]
Description=Jenkins slave service
Requires=network.target
After=network.target

[Service]
Type=simple
User=<%= scope['jenkins::slave::slave_user'] %>
EnvironmentFile=<%= scope['jenkins::params::sysconfdir'] %>/jenkins-slave
ExecStart=<%= scope['jenkins::slave::slave_home'] %>/jenkins-slave-run
<% @systemd_props.each do |k,v| -%>
<%= k %>=<%= v %>
<% end -%>

[Install]
WantedBy=multi-user.target
